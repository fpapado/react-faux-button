{
  "name": "react-faux-button",
  "version": "0.3.0",
  "description": "An accessible, configurable React Button usurper.",
  "source": "src/index.tsx",
  "module": "dist/react-faux-button.es.js",
  "main": "dist/react-faux-button.es.js",
  "umd:main": "dist/react-faux-button.umd.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fpapado/react-faux-button.git"
  },
  "keywords": [
    "react",
    "a11y",
    "accessibility",
    "button",
    "aria"
  ],
  "author": "Fotis Papadogeorgopoulos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fpapado/react-faux-button/issues"
  },
  "homepage": "https://github.com/fpapado/react-faux-button#readme",
  "scripts": {
    "dev": "tsc --watch --pretty",
    "build": "microbundle build",
    "test": "npm run build",
    "prepare": "npm t",
    "release": "npm t && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint",
      "git add"
    ],
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint": "^5.1.0",
    "eslint-plugin-jsx-a11y": "^6.1.0",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.0",
    "microbundle": "^0.5.1",
    "prettier": "^1.13.7",
    "typescript": "^2.9.2"
  },
  "peerDependencies": {
    "react": "^15 || ^16",
    "react-dom": "^15 || ^16"
  },
  "dependencies": {
    "@types/react": "^16.4.6"
  }
}
